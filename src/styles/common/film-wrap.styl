.film_wrap
  display flex;
  background linear-gradient(#fcc4c4, #ffc7ab);
  margin 10px;
  border-radius 10px;
  height: 500px;
  
  .content_wrap
    display: flex;
    gap 20px;
    margin 10px;

    .img_wrap
      background gainsboro;
      align-items center
      display flex
      border-radius 10px;

      .movie_img
        max-height 400px;
        max-width 270px;
        align-self center;
        margin 10px;
        border-radius 10px;
  
    .text_wrap
      display flex;
      flex-direction column;
      gap 20px;
      margin-top 20px;
      font-weight 800;
      font-size 32px;
  
      .movie_title
        font-size 48px;

