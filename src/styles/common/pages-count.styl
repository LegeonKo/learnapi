.pages_count
  display: flex;
  gap 10px;
  align-items center;
  height 100%;
  margin-left 10px;

  a
    display: flex;
    align-items center;
    justify-content center;
    font-size 18px;
    color: black;
    width 35px;
    height 35px;
    border-radius 100px;
    align-self center;
    text-decoration none;
    transition background .3s;

    &:hover
      background rgba(128, 128, 128, 0.51)
      transition background .3s;

  .current_page
    background rgba(128, 128, 128, 0.75);
    pointer-events none;