body
  margin 0
  background linear-gradient(#7ce664, #18cfef);

  *
    box-sizing border-box

  header
    color white
    width 100vw;
    height 70px;
    background #1f1b1b;
    position fixed;
    display: flex;
    justify-content center
    align-items center
    gap 100px;
    font-size 32px;

    input
      width 400px;
      height 30px;
      border-radius 10px;

  .content
    max-width 1300px;
    height 200vh;
    margin 0 auto;
    background white
    color red
    font-size 58px
    padding-top 70px;